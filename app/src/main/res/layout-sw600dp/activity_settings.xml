<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/fundocartao">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="?attr/colorOnSurface"
        app:title="Configurações"
        app:titleTextColor="?attr/colorOnSurface"
        app:elevation="0dp" />

    <!-- Container para centralização -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="8dp">

        <!-- Conteúdo centralizado com largura máxima -->
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="@dimen/max_card_width_settings"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <!-- Seção: Atualizações -->
                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Atualizações"
                    android:paddingVertical="4dp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/fundocartao"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_check_update"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:gravity="start|center_vertical"
                            android:paddingHorizontal="16dp"
                            android:text="Verificar atualizações do app"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            app:icon="@drawable/ic_update"
                            app:iconTint="?attr/colorOnSurfaceVariant"
                            app:iconGravity="start"
                            app:iconPadding="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Seção: Dados -->
                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dados"
                    android:paddingVertical="4dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="16dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/fundocartao"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_clear_data"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:gravity="start|center_vertical"
                            android:paddingHorizontal="16dp"
                            android:text="Limpar dados"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            app:icon="@drawable/ic_delete_sweep"
                            app:iconTint="?attr/colorOnSurfaceVariant"
                            app:iconGravity="start"
                            app:iconPadding="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Seção: Segurança -->
                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Segurança"
                    android:paddingVertical="4dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="16dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/fundocartao"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp"
                    android:layout_marginVertical="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_clear_password"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:gravity="start|center_vertical"
                            android:paddingHorizontal="16dp"
                            android:text="Limpar senhas e credenciais salvas"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            app:icon="@drawable/ic_security"
                            app:iconTint="?attr/colorOnSurfaceVariant"
                            app:iconGravity="start"
                            app:iconPadding="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Seção: Redes Sociais -->
                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Me acompanhe nas redes sociais:"
                    android:paddingVertical="4dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="16dp"/>

                <!-- Twitter -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/fundocartao"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp"
                    android:layout_marginVertical="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_twitter"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:gravity="start|center_vertical"
                            android:paddingHorizontal="16dp"
                            android:text="Twitter (@gmb7886)"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            app:icon="@drawable/ic_twitter"
                            app:iconTint="?attr/colorOnSurfaceVariant"
                            app:iconGravity="start"
                            app:iconPadding="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Reddit -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/fundocartao"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp"
                    android:layout_marginVertical="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_reddit"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:gravity="start|center_vertical"
                            android:paddingHorizontal="16dp"
                            android:text="Reddit (u/GMB7886)"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            app:icon="@drawable/ic_reddit"
                            app:iconTint="?attr/colorOnSurfaceVariant"
                            app:iconGravity="start"
                            app:iconPadding="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- GitHub -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/fundocartao"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp"
                    android:layout_marginVertical="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_github"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:gravity="start|center_vertical"
                            android:paddingHorizontal="16dp"
                            android:text="GitHub (gmb7886)"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            app:icon="@drawable/ic_github"
                            app:iconTint="?attr/colorOnSurfaceVariant"
                            app:iconGravity="start"
                            app:iconPadding="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- YouTube -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/fundocartao"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp"
                    android:layout_marginVertical="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_youtube"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:gravity="start|center_vertical"
                            android:paddingHorizontal="16dp"
                            android:text="YouTube (@CanalDoMarinov)"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            app:icon="@drawable/ic_youtube"
                            app:iconTint="?attr/colorOnSurfaceVariant"
                            app:iconGravity="start"
                            app:iconPadding="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>