<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Atalho para Notas -->
    <shortcut
        android:shortcutId="notas"
        android:enabled="true"
        android:icon="@drawable/ic_notes"
        android:shortcutShortLabel="@string/shortcut_notas_short"
        android:shortcutLongLabel="@string/shortcut_notas_long">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.marinov.colegioetapa"
            android:targetClass="com.marinov.colegioetapa.MainActivity">
            <extra android:name="destination" android:value="notas" />
        </intent>
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

