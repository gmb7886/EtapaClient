<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema da aplicação, sem ActionBar padrão -->
    <style name="Theme.ColégioEtapa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- cores padrão -->
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorSurface">@color/colorSurface</item>
        <!-- Configurações das barras -->
        <item name="android:statusBarColor">@color/fundocartao</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorSurfaceVariant">@android:color/black</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:windowLightStatusBar">false</item>


        <!-- Mantenha os estilos customizados -->
        <item name="toolbarStyle">@style/Widget.ColégioEtapa.TopAppBar</item>
        <item name="bottomNavigationStyle">@style/Widget.ColégioEtapa.BottomNavigationView</item>
    </style>

    <style name="Widget.ColégioEtapa.TopAppBar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/fundocartao</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
        <item name="android:iconTint">?attr/colorOnSurface</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.ColégioEtapa.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">32dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="itemIconTint">@color/selector_bottom_nav_item_color</item>
        <item name="itemTextColor">@color/selector_bottom_nav_item_color</item>
        <item name="android:background">@color/fundocartao</item>
    </style>
    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/fundocartao</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>
